        position top
        mode hide
        hidden_state hide
        modifier mod4
        status_command i3blocks -c /home/$USER/.config/i3/i3blocks.conf 
        tray_output primary
        colors {
                background #000000
                statusline #ffffff
                separator  #663300
# class                            border        background         text
                focused_workspace  $focus-ws-bg  $bg-color          $text-color
                active_workspace   $active-ws-bg $active-ws-bg      $text-color
                inactive_workspace $inact-bg     $inactive-bg-color $text-color
                }

}

